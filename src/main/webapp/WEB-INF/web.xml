<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>FlyAway</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
<servlet>
  <servlet-name>FlightController</servlet-name>
  <servlet-class>com.controller.FlightController</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>FlightController</servlet-name>
  <url-pattern>/ListFlights.jsp</url-pattern>
</servlet-mapping>
<servlet>
  <servlet-name>AirlineController</servlet-name>
  <servlet-class>com.controller.AirlineController</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>AirlineController</servlet-name>
  <url-pattern>/ListAirlines.jsp</url-pattern>
</servlet-mapping>
<servlet>
  <servlet-name>AdminController</servlet-name>
  <servlet-class>com.controller.AdminController</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>AdminController</servlet-name>
  <url-pattern>/ListAdmins.jsp</url-pattern>
</servlet-mapping>
</web-app>